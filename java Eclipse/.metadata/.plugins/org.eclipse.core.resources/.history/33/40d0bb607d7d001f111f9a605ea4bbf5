	public List<Integer> FindDivisors(int num) {
		
		List <Integer> l = new ArrayList<>();
		
		for(int i=1; i<=num; i++) {
			
			if(num%i ==0) {
				
				l.add(i);
			}
		}
		
		return l;
		
	}
	
